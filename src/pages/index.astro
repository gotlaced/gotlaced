    const userId = "365890906836041741";
    async function fetchStatus() {
      try {
        const res = await fetch(`https://api.lanyard.rest/v1/users/${userId}`);
        const data = await res.json();
        if (!data.success) return;
        const presence = data.data;
        let statusClass = "status-offline";
        if (presence.discord_status === "online") statusClass = "status-online";
        else if (presence.discord_status === "idle") statusClass = "status-idle";
		else if (presence.discord_status === "dnd") {
			statusClass = "status-dnd";
			presence.discord_status = "Do Not Disturb";
		}

        let html = `<span class='status-dot ${statusClass}'></span>Status: ${presence.discord_status}`;
        if (presence.activities && presence.activities.length > 0) {
          const game = presence.activities.find((a) => a.type === 0 && a.name !== "Spotify");
          if (game) {
            html += `<br>🎮 Playing: <span style='color:#ffcc00;'>${game.name}</span>`;
          }
        }
        if (presence.spotify) {
          html += `<br><span style='color:#ff66ff;'>🎵 ${presence.spotify.song}</span> by <span style='color:#cc99ff;'>${presence.spotify.artist}</span>`;
          html += `<br><img src='${presence.spotify.album_art_url}' alt='Album Art' style='width:150px;height:150px;border-radius:10px;object-fit:cover;'>`;
        }
        document.getElementById("lanyard").innerHTML = html;
      } catch (e) {
        console.error("Lanyard fetch error", e);
      }
    }
    setInterval(fetchStatus, 15000);
    document.addEventListener("DOMContentLoaded", fetchStatus);

