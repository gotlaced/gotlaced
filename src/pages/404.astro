---
const path = typeof window !== "undefined" ? window.location.pathname : "/";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>404: Not Found</title>
    <style>
      body {
        margin: 0;
        padding: 2rem;
        font-family: system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
        background: #fff;
        color: #111;
      }
      h1 {
        font-size: 6rem;
        margin: 0;
      }
      .path-box {
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-family: monospace;
        background: #f5f5f5;
      }
    </style>
  </head>
  <body>
    <h1>404: Not Found</h1>
    <div class="path-box">
      Path: <span id="current-path">{path}</span>
    </div>

    <script>
      // Dynamically show the path in the browser
      document.getElementById("current-path").textContent = window.location.pathname;
    </script>
  </body>
</html>
